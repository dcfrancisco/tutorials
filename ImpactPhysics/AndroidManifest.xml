<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      android:versionCode="1"
      android:versionName="1.0" package="com.korsbergtools.ImpactPhysics">
    <uses-sdk android:minSdkVersion="8" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application android:icon="@drawable/chrome" android:label="@string/app_name">
        <activity android:name=".ImpactPhysics"
                  android:label="@string/app_name"
                  android:screenOrientation="portrait" 
	              android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameOptions"
                  android:label="@string/app_name">
        </activity>
        <activity android:name=".WebViewHelp"
                  android:label="@string/app_name">
        </activity>        
    </application>
    <uses-permission android:name="android.permission.WAKE_LOCK" />
</manifest>